pipeline {
    agent any
    tools{
        maven  'M2_HOME'
    }

    stages {
        stage('Git Login') {
            steps {
                    git credentialsId: '1308a3c2-78ad-46a9-892d-428b86608bcc', url: 'https://github.com/ariz1985/bpa.git'            
            }
        }
        
        stage('Build the Project'){
            steps{
                sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('Docker Build'){
            steps{
                sh 'docker build -t ariz1985/bankingapp1.0 .'
            }
        }
        stage('Docker Login and Push'){
            steps{
                script{
                    withCredentials([usernamePassword(credentialsId: 'docker_usr_pass', passwordVariable: 'dockerpass', usernameVariable: 'dockerusr')])
                    {
                        sh 'docker login -u $dockerusr -p $dockerpass'
                        echo "$dockerusr"
                        echo "$dockerpass"
                        sh 'docker push ariz1985/bankingapp1.0'
                    }
                }
            }
        }
        
    }
}

